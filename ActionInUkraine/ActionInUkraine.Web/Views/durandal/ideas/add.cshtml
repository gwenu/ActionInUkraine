<div data-bind="with: ideaToAdd">
    <p>
        <h4>Назва проекту *</h4>
        <input type="text" data-bind="value: title" id="title" required />
    </p>
    <p>

        <form method="post">
            <h4>Зображення</h4>
            <input id="file1" accept="image/*" name="file1" type="file" value="Завантажити" />
