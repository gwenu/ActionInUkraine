        <select data-bind="options: $parent.categories, value: category, optionsCaption: '<виберіть категорію>'" id="Category"></select>
        <br />
    </p>
    <p>
        <h4>Короткий опис</h4>
        <textarea id="description" data-bind="value: description" rows="3" required></textarea>
    </p>
    <div>
        <h4>Соціальні мережі</h4>
        <p>
            <input type="text" id="socialNetworkItem" style="width: 200px;" data-bind="value:socialNetworkItem, valueUpdate:'afterkeydown'" />
            <input type="button" id="addSocialNetwork" data-bind='click:$parent.addSocialNetwork, enable: socialNetworkItem' value="+" />

            <ul data-bind="foreach: socialNetworks">
                <li>
                    <a data-bind="text: $data,
                              attr: {href: $data}" />
                    <input type="button" data-bind="click:$root.removeSocialNetwork.bind($parent, $data)" value="-" />
                </li>
            </ul>
        </p>
    </div>
